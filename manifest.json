{
    "manifest_version": 2,
    "name": "Radio Skovoroda",
    "description": "Brings Radio Skovoroda to you without adirional tab",
    "version": "0.1",

    "browser_action": {
        "default_icon": "play-brws.png",
        "default_popup": "popup.html",
        "default_title": "Радіо Сковорода"
    },
    
    "author"       : "Relevant Software",
    "homepage_url" : "http://radioskovoroda.com/", 

    "background":{
        "page": "background.html",
        "script": "background.js",
        "persistent": true
    },

    "web_accessible_resources": [
        "http://radioskovoroda.com/"
    ],

    "permissions": [
        "http://195.248.234.62:8000/",
        "background",
        "tabs",
        "activeTab"
    ]
}
