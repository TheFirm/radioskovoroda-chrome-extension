{
    "manifest_version": 2,
    "name": "Radio Skovoroda",
    "description": "Brings Radio Skovoroda to you without adirional tab",
    "version": "0.1",

    "browser_action": {
        "default_icon": "skovoroda.jpg",
        "default_popup": "popup.html",
        "default_title": "radio-popup"
    },
    
    "background":{
        "page": "background.html",
        "script": "background.js",
        "persistent": false
    },

    "web_accessible_resources": [
        "http://radioskovoroda.com/"
    ],

    "permissions": [
        "background",
        "tabs",
        "notifications",
        "activeTab",
        "https://ajax.googleapis.com/",
        "http://radioskovoroda.com/"
    ]
}
